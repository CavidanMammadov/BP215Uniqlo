@model ProductCreateVm
@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Create Slider</h6>
    </div>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">SubTitle</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CoverImage">Link</label>
                <input asp-for="CoverImage" class="form-control">
                <span asp-validation-for="CoverImage" class="text-small text-danger"></span>
            </div>
            <div class="form-row col">
                <div class="form-group">
                    <label asp-for="SellPrice"></label>
                    <input asp-for="SellPrice" type="file" class="form-control-file">
                    <span asp-validation-for="SellPrice" class="text-small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CostPrice"></label>
                    <input asp-for="CostPrice" type="file" class="form-control-file">
                    <span asp-validation-for="CostPrice" class="text-small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Discount"></label>
                    <input asp-for="Discount" type="file" class="form-control-file">
                    <span asp-validation-for="Discount" class="text-small text-danger"></span>
                </div>
            </div>
        </form>


            
    </div>
    <div class="form-row col">
        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" type="file" class="form-control-file">
            <span asp-validation-for="Quantity" class="text-small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <input asp-for="CategoryId" type="file" class="form-control-file">
            <span asp-validation-for="CategoryId" class="text-small text-danger"></span>
        </div>
        
    </div>
           <button type="submit" class="btn btn-primary">Submit</button>
           
       
    </div>
</div>
